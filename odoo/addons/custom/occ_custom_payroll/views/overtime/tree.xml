<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <!-- Tree - Pre Overtime Request - Employees -->
        <record id="employee_preovertime_tree_view" model="ir.ui.view">
			<field name="name">employee.preovertime.request.tree</field>
			<field name="model">pre.overtime.request</field>
			<field name="arch" type="xml">
				<tree string="Overtime Request">
					<field name="ot_date"/>
					<field name="est_hours" widget="float_time"/>
					<field name="name"/>
					<field name="employee_id"/>
					<field name="company_id"/>
					<field name="department_id"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

